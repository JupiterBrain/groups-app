{
    "app-id": "io.github.JupiterBrain.groups-app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "groups-app",
    "branch": "stable",
    "tags": ["4.0.0"],
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "groups-app",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib/groups-app",
                "cp -r build/linux/x64/release/bundle/* /app/lib/groups-app/",
                "install -D installer/groups-app.desktop /app/share/applications/io.github.JupiterBrain.groups-app.desktop",
                "install -D installer/groups-app-icon.png /app/share/icons/hicolor/512x512/apps/io.github.JupiterBrain.groups-app.png",
                "mkdir /app/bin",
                "ln -s /app/lib/groups-app/groups-app /app/bin/groups-app"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}